<Window x:Class="HW3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW3"
        mc:Ignorable="d"
        Title="Home Work 3" Height="600" Width="800" Background="Cornsilk" ResizeMode="NoResize">
    
    <Canvas x:Name="Canva" Height="580" Width="800">

        <Label x:Name="AskLabel"  Canvas.Left="110" Canvas.Top="5"   Content="Хочете прибавку до зарплати?" FontSize="40" Foreground="Red"/>

        <Button x:Name="NoButton" Canvas.Right="50" Canvas.Top="300" Content="Hi"  FontSize="40" Width="100" Height="60" Click="NoButton_Click"/>

        <Button x:Name="YesButton" Canvas.Left="50" Canvas.Top="300" Content="Так" FontSize="40" Width="100" Height="60" MouseEnter="YesButton_MouseEnter"/>
    </Canvas>

</Window>
